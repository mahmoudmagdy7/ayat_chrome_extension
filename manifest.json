{
  "name": "Ayat",
  "version": "1.0",
  "content_scripts": [
    {
      "matches": ["http://*/*", "https://*/*"],
      "js": ["js/app.js"],
      "css": ["main.css"]
    }
  ],
  "action": {
    "default_title": "ayat",
    "default_icon": "icon.png"
  },
  "background": {
    "service_worker": "js/background.js"
  },
  "permissions": ["tabs"],
  "manifest_version": 3
}
